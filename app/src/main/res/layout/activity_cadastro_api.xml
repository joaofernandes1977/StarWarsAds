<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    layout_width="match_patent"

    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    layout_width="match_patent"

    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fundogalaxia"
        tools:context=".activityview.CadastroApi">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:theme="@style/Theme.StarWars.AppBarOverlay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/voltarprincipalCad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:text="VOLTAR"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </com.google.android.material.appbar.AppBarLayout>


        <TextView
            android:id="@+id/cadastroApi"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_marginTop="67dp"
            android:text="CADASTRO API"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/id_api"
            style="@style/Edit_Text_api"
            android:layout_marginTop="30dp"
            android:hint="Id:"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cadastroApi" />

        <EditText
            android:id="@+id/nome_api"
            style="@style/Edit_Text_api"
            android:hint="Nome:"
            android:textColor="@color/white"
            android:textColorHint="@color/white"

            app:layout_constraintEnd_toEndOf="@+id/id_api"
            app:layout_constraintStart_toStartOf="@+id/id_api"
            app:layout_constraintTop_toBottomOf="@+id/id_api" />

        <EditText
            android:id="@+id/url_api"
            style="@style/Edit_Text_api"
            android:hint="Url:"
            android:textColor="@color/white"

            android:textColorHint="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/nome_api"
            app:layout_constraintStart_toStartOf="@+id/nome_api"
            app:layout_constraintTop_toBottomOf="@+id/nome_api" />

        <EditText
            android:id="@+id/especie_api"
            style="@style/Edit_Text_api"
            android:hint="ESPECIE:"
            android:textColor="@color/white"

            android:textColorHint="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/url_api"
            app:layout_constraintStart_toStartOf="@+id/url_api"
            app:layout_constraintTop_toBottomOf="@+id/url_api" />
        <EditText
            android:id="@+id/veiculo_api"
            style="@style/Edit_Text_api"
            android:hint="VEICULO:"
            android:textColor="@color/white"

            android:textColorHint="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/especie_api"
            app:layout_constraintStart_toStartOf="@+id/especie_api"
            app:layout_constraintTop_toBottomOf="@+id/especie_api" />

        <EditText
            android:id="@+id/historia_api"
            style="@style/Edit_Text_api"
            android:hint="Historia:"
            android:textColor="@color/white"

            android:textColorHint="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/veiculo_api"
            app:layout_constraintStart_toStartOf="@+id/veiculo_api"
            app:layout_constraintTop_toBottomOf="@+id/veiculo_api" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_cadastrar_api"
            style="@style/Button"
            android:layout_marginTop="70dp"
            android:text="@string/cadastro"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/historia_api" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
</androidx.core.widget.NestedScrollView>